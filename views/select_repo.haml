%h1 Select repos
%form{action:$urls[:ADD_REPOS], method:"POST"}
  %ul
    - @repos.each do |repo|
      - name = repo["full_name"]
      %li
        <!-- XXXX: if repo or org name changes, things will break here! -->
        <input type="checkbox" name="#{name}" value="#{repo["clone_url"]}" id="#{name}"
        - if repo["checked"]
          checked="checked"
        >
        %label{ for: name }=name
  %input{ type:"hidden", name: "token", value: @token }
  %input{ type:"submit", value: "Add Projects" }
